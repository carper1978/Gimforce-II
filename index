    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Código existente del navbar mobile
            const navbarToggler = document.querySelector('.navbar-toggler');
            const navbar = document.querySelector('.navbar');
            
            navbarToggler.addEventListener('click', function() {
                navbar.classList.toggle('mobile-menu-open');
            });

            // Manejo de submenús y modales
            const navItems = document.querySelectorAll('.nav-item');
            
            navItems.forEach(item => {
                const link = item.querySelector('.nav-link');
                const submenu = item.querySelector('.submenu');
                
                if (submenu) {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        item.classList.toggle('active');
                        
                        // Cerrar otros submenús
                        navItems.forEach(otherItem => {
                            if(otherItem !== item && otherItem.classList.contains('active')) {
                                otherItem.classList.remove('active');
                            }
                        });
                    });

                    // Agregar event listeners para los enlaces del submenú
                    const submenuLinks = submenu.querySelectorAll('a');
                    submenuLinks.forEach(submenuLink => {
                        submenuLink.addEventListener('click', function(e) {
                            e.preventDefault();
                            
                            // Obtener el ID del modal correspondiente
                            const modalId = this.getAttribute('href').substring(1) + 'Modal';
                            const modal = new bootstrap.Modal(document.getElementById(modalId));
                            modal.show();
                        });
                    });
                }
            });

            // Código existente del formulario de registro
            const registrationForm = document.getElementById('registrationForm');
            const successMessage = document.getElementById('successMessage');

            registrationForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Aquí podrías agregar la lógica para enviar los datos a un servidor
                
                // Mostrar mensaje de éxito
                registrationForm.style.display = 'none';
                successMessage.style.display = 'block';
                
                // Cerrar el modal después de 3 segundos
                setTimeout(() => {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('registroModal'));
                    modal.hide();
                    
                    // Resetear el formulario y los mensajes después de cerrar
                    setTimeout(() => {
                        registrationForm.reset();
                        registrationForm.style.display = 'block';
                        successMessage.style.display = 'none';
                    }, 500);
                }, 3000);
            });

            // Mostrar modal de promoción automáticamente después de 3 segundos
            setTimeout(() => {
                const promoModal = new bootstrap.Modal(document.getElementById('promoModal'));
                promoModal.show();
            }, 3000);

            // Configuración mejorada del reproductor de música
            const backgroundMusic = document.getElementById('backgroundMusic');
            const musicToggle = document.getElementById('musicToggle');
            const musicStatus = document.getElementById('musicStatus');
            const volumeControl = document.getElementById('volumeControl');
            const playIcon = musicToggle.querySelector('i.fas');
            let isMusicPlaying = false;

            // Establecer volumen inicial
            backgroundMusic.volume = volumeControl.value;

            // Control de volumen
            volumeControl.addEventListener('input', function() {
                backgroundMusic.volume = this.value;
            });

            // Precarga la música
            backgroundMusic.load();

            musicToggle.addEventListener('click', function() {
                if (isMusicPlaying) {
                    backgroundMusic.pause();
                    musicToggle.classList.remove('btn-primary');
                    musicToggle.classList.add('btn-dark');
                    musicStatus.textContent = 'Reproducir música';
                    playIcon.classList.remove('fa-pause');
                    playIcon.classList.add('fa-play');
                } else {
                    // Intenta reproducir y maneja posibles errores
                    const playPromise = backgroundMusic.play();
                    
                    if (playPromise !== undefined) {
                        playPromise.then(_ => {
                            // Reproducción exitosa
                            musicToggle.classList.remove('btn-dark');
                            musicToggle.classList.add('btn-primary');
                            musicStatus.textContent = 'Pausar música';
                            playIcon.classList.remove('fa-play');
                            playIcon.classList.add('fa-pause');
                        })
                        .catch(error => {
                            // Error en la reproducción
                            console.error('Error al reproducir la música:', error);
                            alert('Hubo un problema al reproducir la música. Por favor, intenta de nuevo.');
                        });
                    }
                }
                isMusicPlaying = !isMusicPlaying;
            });

            // Manejo de errores de audio
            backgroundMusic.addEventListener('error', function(e) {
                console.error('Error en la carga de audio:', e);
                alert('No se pudo cargar el archivo de música. Por favor, verifica que el archivo existe en la carpeta correcta.');
            });

            // Manejo del formulario de consultas
            const consultaForm = document.getElementById('consultaForm');
            if (consultaForm) {
                consultaForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    // Aquí iría la lógica para enviar el formulario
                    alert('¡Gracias por tu consulta! Te responderemos a la brevedad.');
                    consultaForm.reset();
                    const modal = bootstrap.Modal.getInstance(document.getElementById('consultasModal'));
                    modal.hide();
                });
            }

            // Configuración del formulario de clase de prueba
            const clasePruebaForm = document.getElementById('clasePruebaForm');
            const confirmacionPrueba = document.getElementById('confirmacionPrueba');
            const fechaPrueba = document.getElementById('fechaPrueba');

            // Establecer la fecha mínima como hoy
            const today = new Date().toISOString().split('T')[0];
            fechaPrueba.setAttribute('min', today);

            if (clasePruebaForm) {
                clasePruebaForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Aquí iría la lógica para enviar los datos al servidor
                    
                    // Mostrar mensaje de confirmación
                    clasePruebaForm.style.display = 'none';
                    confirmacionPrueba.style.display = 'block';
                    
                    // Cerrar el modal después de 3 segundos
                    setTimeout(() => {
                        const modal = bootstrap.Modal.getInstance(document.getElementById('clasePruebaModal'));
                        modal.hide();
                        
                        // Resetear el formulario y los mensajes después de cerrar
                        setTimeout(() => {
                            clasePruebaForm.reset();
                            clasePruebaForm.style.display = 'block';
                            confirmacionPrueba.style.display = 'none';
                        }, 500);
                    }, 3000);
                });
            }
        });
    </script>
</body>
</html>
